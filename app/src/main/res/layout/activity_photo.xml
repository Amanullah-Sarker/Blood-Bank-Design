<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    android:background="#d7e7dc"
    tools:context=".Signup.PhotoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where Do You Live?"
        android:textSize="50sp"
        android:textColor="@color/black"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Upload a photo"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:drawableTop="@drawable/person"
        android:textColor="#fff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Please provide correct address. This information will keep safe."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />

    <Button
        android:onClick="login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:textColor="#fff"
        />

</LinearLayout>